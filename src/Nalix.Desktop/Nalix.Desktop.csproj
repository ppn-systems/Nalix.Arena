<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFrameworks>net9.0-windows;net9.0</TargetFrameworks>

		<StartupObject>Nalix.Desktop.Program</StartupObject>

		<AssemblyName>Arena</AssemblyName>

		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<RuntimeIdentifiers>win-x64;linux-x64;osx-x64;osx-arm64</RuntimeIdentifiers>

		<PublishSingleFile>true</PublishSingleFile>
		<SelfContained>true</SelfContained>
		<UseAppHost>true</UseAppHost>

		<PublishReadyToRun>false</PublishReadyToRun>
		<InvariantGlobalization>true</InvariantGlobalization>
		<EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
	</PropertyGroup>
	<PropertyGroup Condition="'$(TargetFramework)'=='net9.0-windows'">
		<OutputType>Exe</OutputType>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Nalix.Logging" Version="5.7.0" />
		<PackageReference Include="Nalix.SDK" Version="5.7.0" />

		<ProjectReference Include="..\Nalix.Rendering\Nalix.Rendering.csproj" />
		<ProjectReference Include="..\Nalix.Communication\Nalix.Communication.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="..\..\assets\**\*.*">
			<Link>assets\%(RecursiveDir)%(Filename)%(Extension)</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

</Project>
